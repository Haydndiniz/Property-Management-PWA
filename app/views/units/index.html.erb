
<h1>Units</h1>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%=link_to "Property Details", @property, :class => "nav-link"  %>
  </li>
  <li class="nav-item">
    <%=link_to "Units", property_units_path(@property) , :class => "nav-link active"  %>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Resources</a>
  </li>
  <li class="nav-item">
    <%=link_to "Maintenance Requests", property_maintenance_requests_path(@property) , :class => "nav-link"  %>
  </li>
  <li class="nav-item">
    <%=link_to "Tenants", tenants_path , :class => "nav-link"  %>
  </li>
</ul>
</br>
<%= link_to 'Create New Tenant', rails_admin_path, :class => "btn btn-primary text-white"%>
</br>
<table class="table align-middle mb-0 bg-white table-dark">
  <thead class="bg-light">
  <tr>
    <th>Unit Name</th>
    <th>Unit Type</th>
    <th>Unit Price</th>
    <th>Property name</th>
<!--    <th>Leased?</th>-->
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @units.each do |unit| %>
    <tr>
      <td>
        <div class="fw-normal mb-1">
            <%=unit.unit_name %>

        </div>
      </td>
      <td>
        <p class="fw-normal mb-1"><%=unit.unit_type %></p>
      </td>
      <td><%=unit.rent_price %></td>
      <td>
        <div class="badge rounded-pill bg-secondary d-inline">
          <%=unit.property.name %>
        </div>
      </td>
<!--      <td>-->
        <%# if unit.tenant != nil %>
<!--          true-->
          <%# end %>
<!--    </tr>-->
      <td>
        <%= link_to 'View', [@property, unit], :class => "btn btn-sm btn-rounded text-white"%>
        <%= link_to 'Edit', rails_admin_path, :class => "btn btn-sm btn-rounded text-white"%>
        <%= link_to 'Delete', [@property,unit], method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-sm btn-rounded text-white"%>
      </td>
    </tr>
    </tr>
  <% end %>
  </tbody>
</table>

